<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <% if task.completed? %>
        <li>
          [x] <%= link_to task.title, task %>
          <%= link_to "Delete #{task.title}",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
        </li>
    <% else %>
        <li>
          [ ] <%= link_to task.title, task %>
          <%= link_to "Delete #{task.title}",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
        </li>
    <% end %>
 <% end %>
</ul>

<%= link_to "Add new task", new_path  %>


